<div>
    <h1>{{venueData.name}} Profile</h1>

    <form method="POST" action="/home/venue/profile">
    
    <p>Name: {{venueData.name}}</p>
    <p>Email: {{venueData.email}}</p>
    <p>City: {{venueData.cityName}}</p>
    
    <img src="{{venueData.imgUrl}}">
    <label for="imgUrl">Insert your image URL</label>
    <input type="text" id="imgUrl" name="imgUrl" value="{{venueData.imgUrl}}">

    {{!-- <label for="imgUrl">Upload a photo of your venue:</label>
    <input type="file" id="imgUrl" name="imgUrl" accept="image/png, image/jpeg">
    <input type="submit"> --}}
    
    <label for="phoneNumber">Enter your phone number:</label>
    <input type="tel" id="phoneNumber" name="phoneNumber" value="{{venueData.phoneNumber}}">

    <label for="type">Enter your type:</label>
    <input type="text" id="type" name="type" value="{{venueData.type}}">

    <label for="genre">Enter your genre:</label>
    <input type="text" id="genre" name="genre" value="{{venueData.genre}}">

    <label for="description">Please give a brief description:</label>
    <input type="text-area" id="description" name="description" value="{{venueData.description}}">

    <label for="capacity">Enter your venue's capacity:</label>
    <input type="number" id="capacity" name="capacity" value="{{venueData.capacity}}">

    {{#if venueData.isAvailable}}
    <label for="isAvailable">Availability:</label><br>
    <input type="checkbox" id="isAvailable" name="isAvailable" value="false" checked>
    {{/if}}

    {{#unless venueData.isAvailable}}
    <label for="isAvailable">Availability:</label><br>
    <input type="checkbox" id="isAvailable" name="isAvailable" value="true">
    {{/unless}}

    {{#if venueData.backline}}
    <label for="backline">Backline Provided</label><br>
    <input type="checkbox" id="backline" name="backline" value="false" checked>
    {{/if}}

    {{#unless venueData.backline}}
    <label for="backline">Backline Provided</label><br>
    <input type="checkbox" id="backline" name="backline" value="true">
    {{/unless}}

    {{#if venueData.food}}
    <label for="food">Catering Provided</label><br>
    <input type="checkbox" id="food" name="food" value="false" checked>
    {{/if}}

    {{#unless venueData.food}}
    <label for="food">Catering Provided</label><br>
    <input type="checkbox" id="food" name="food" value="true">
    {{/unless}}

    <button type="submit" >Save Changes</button>
</form>

{{#if errorMessage}}
  <div class="error">{{errorMessage}}</div>
{{/if}}  
</div>