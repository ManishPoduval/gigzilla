<div>Musician Tour Page</div>

<div class = "main-page-div">

    <div class ="tours-header main-header-div">
     
        <h2>Hello {{musicianData.name}}</h2>
      
    </div>


    <div class="add-cities-div">

      <div>
        <h1>
          {{tourData.name}}
        </h1>
      </div>
      
      <div class="search-city">

        <form method="POST" action="/home/musician/{{tourData._id}}">
        <input type="text" name="city" id="searchbar" placeholder="Search for a city..">
        <button type="submit" class="button secondary-button">Add City</button>
      </form>

      </div>

    </div>

      

    <div class = "display-cities">
      {{#if tourData.cities}}
        {{#each tourData.cities}}
          <div class="each-city">
            <a href="/home/musician/{{../tourData._id}}/{{this.name}}">{{this.name}}</a>
          <a href="/home/musician/delete/{{../tourData._id}}/{{this._id}}"><button class="button secondary-button" name="delete" type="submit">Delete City</button></a>

            {{#if this.contactedByMusician}}
              {{#each this.possibleVenues}}
                <p>Contacted: {{this}}</p>
                <a href="/home/musician/{{../../tourData._id}}/{{../this._id}}/{{this}}/add"><button class="button secondary-button">Confirm</button></a>
              {{/each}}
          
            {{/if}}  
        <div class="city-confirmed">
          <p>Confirmed: {{this.selectedVenue.name}}</p>
        </div>

            
          </div>
          
             
        {{/each}}
    {{/if}}


    </div>
    

     


  </div>

  {{#if errorMessage}}
      <div class="error">{{errorMessage}}</div>
    {{/if}}

  <div class="backbtn-div">
    <a href="/home/musician/"><button class="button back-button">Back to Home</button></a>
    
</div>


